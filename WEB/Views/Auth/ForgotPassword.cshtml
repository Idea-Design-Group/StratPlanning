@model Application.DTOs.ForgotPasswordDTO
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Forgot Password?";

}

<div class="m-login">
    <div class="m-login__head">
        <h3 class="m-login__title">
            Forgotten Password ?
        </h3>
        <div class="m-login__desc">
            Enter your email to reset your password:
        </div>
    </div>
    <form asp-controller="Auth" asp-action="ForgotPassword" class="m-login__form m-form" method="post">
        <div class="form-group m-form__group">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
        <div class="form-group m-form__group">
            <input asp-for="Email" class="form-control m-input" type="text" placeholder="Email"
                   autocomplete="off">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="m-login__form-action">
            <button type="submit"
                    class="btn m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn btn-large-sp btn-sp">
                Request
            </button>
            &nbsp;&nbsp;
            <button asp-controller="Auth" asp-action="Login" type="button"
                    class="btn m-btn m-btn--pill m-btn--custom m-login__btn btn-sp--secondary btn-large-sp">
                Back to Login
            </button>
        </div>
    </form>
</div>