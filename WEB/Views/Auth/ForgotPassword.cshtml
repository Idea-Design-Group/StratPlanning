
@{
    ViewData["Title"] = "Forgot Password?";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="m-login">
    <div class="m-login__head">
        <h3 class="m-login__title">
            Forgotten Password ?
        </h3>
        <div class="m-login__desc">
            Enter your email to reset your password:
        </div>
    </div>
    <form class="m-login__form m-form" action="">
        <div class="form-group m-form__group">
            <input class="form-control m-input" type="text" placeholder="Email" name="email"
                    autocomplete="off">
        </div>
        <div class="m-login__form-action">
            <button id="m_login_forget_password_submit"
                    class="btn m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn btn-large-sp btn-sp">
                Request
            </button>
            &nbsp;&nbsp;
            <button id="m_login_forget_password_cancel" asp-controller="Auth" asp-action="Login"
                    class="btn m-btn m-btn--pill m-btn--custom m-login__btn btn-sp--secondary btn-large-sp">
                Back to Login
            </button>
        </div>
    </form>
</div>