@model Application.DTOs.UserLoginDTO

@{
    Layout="_LoginLayout";

    ViewData["Title"] = "Login";
}

<div class="m-login__signin">
    <div class="m-login__head">
        <h3 class="m-login__title">
            Sign In
        </h3>
    </div>
    <form asp-controller="Auth" asp-action="Login" class="m-login__form m-form" method="post">
        <input asp-for="ReturnUrl" type="hidden">
        <div class="form-group m-form__group">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
        <div class="form-group m-form__group">
            <input asp-for="Email" class="form-control m-input" type="text" placeholder="Email">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group m-form__group">
            <input asp-for="Password" class="form-control m-input m-login__form-input--last" type="password"
                   placeholder="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="row m-login__form-sub">
            <div class="col m--align-left m-login__form-left">
                <label class="m-checkbox checkbox-sp  m-checkbox--solid">
                    <input asp-for="RememberMe" type="checkbox">
                    Remember me
                    <span></span>
                </label>
            </div>
            <div class="col m--align-right m-login__form-right">
                <a asp-controller="Auth" asp-action="ForgotPassword" class="m-link">
                    Forget Password ?
                </a>
            </div>
        </div>
        <div class="m-login__form-action">
            <button type="submit" id="m_login_signin_submit"
                    class="btn m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn btn-large-sp btn-sp">
                Sign In
            </button>
        </div>
    </form>
</div>