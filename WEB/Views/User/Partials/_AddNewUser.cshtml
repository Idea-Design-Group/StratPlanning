@model Application.DTOs.NewUserDTO
@using Web.Helpers

@{Layout = null;
}


<form class="m-form m-form--fit m-form--label-align-right" id="add_user_to_plan_new">
    <div class="m-portlet__body">
        <div class="form-group m-form__group">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
        <div class="form-group m-form__group row">
            <label for="example-text-input" class="col-2 col-form-label">
                Firstname
            </label>
            <div class="col-10">
                <input asp-for="FirstName" class="form-control m-input" />
            </div>
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group m-form__group row">
            <label for="example-text-input" class="col-2 col-form-label">
                Lastname
            </label>
            <div class="col-10">
                <input asp-for="LastName" class="form-control m-input" />
            </div>
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
        <div class="form-group m-form__group row">
            <label asp-for="Email" class="col-2 col-form-label">
                Email
            </label>
            <div class="col-10">
                <input asp-for="Email" class="form-control m-input" />
            </div>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group m-form__group row">
            <label asp-for="PositionId" class="col-2 col-form-label">
                Position
            </label>
            <div class="col-10">
                <select asp-items="UserHelper.GetPositionsSelectList(Context)" asp-for="PositionId" class="form-control m-input">
                    <option value="">-- Specify --</option>
                </select>
            </div>
            <span class="text-danger" asp-validation-for="PositionId"></span>
        </div>
    </div>
    <div class="m-portlet__foot m-portlet__foot--fit">
        <div class="m-form__actions pull-right">
            <button type="submit" class="btn btn-sp m-btn m-btn--icon">
                Add
            </button>
        </div>
    </div>
</form>
