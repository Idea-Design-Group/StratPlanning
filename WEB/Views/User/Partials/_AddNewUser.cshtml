@model Application.DTOs.AddUserToPlanDTO
@using Web.Helpers
@inject Web.Helpers.HtmlHelper htmlHelper
@{
    Layout = null;
}
<form class="m-form m-form--fit m-form--label-align-right" id="add_user_to_plan_new">
    <div class="m-portlet__body">
        <div class="form-group m-form__group">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
        <div class="form-group m-form__group">
            <label asp-for="NewUser.FirstName">
                @sharedResource.manageUserListFirstnameAttribute
            </label>
            <input asp-for="NewUser.FirstName" class="form-control m-input" />
            <span class="text-danger" asp-validation-for="NewUser.FirstName"></span>
        </div>
        <div class="form-group m-form__group">
            <label asp-for="NewUser.LastName">
                @sharedResource.manageUserListLastnameAttribute
            </label>
            <input asp-for="NewUser.LastName" class="form-control m-input" />
            <span class="text-danger" asp-validation-for="NewUser.LastName"></span>
        </div>
        <div class="form-group m-form__group ">
            <label asp-for="NewUser.Email">
                @sharedResource.manageUserListEmailAttribute
            </label>
            <input asp-for="NewUser.Email" class="form-control m-input" />
            <span class="text-danger" asp-validation-for="NewUser.Email"></span>
        </div>
        <div class="form-group m-form__group">
            <label asp-for="NewUser.PositionId">
                @sharedResource.manageUserListPositionAtrribute
            </label>
            <select asp-items="htmlHelper.GetPositionsSelectList()" asp-for="NewUser.PositionId" class="form-control m-select2" style="width:100%">
                <option value="">@sharedResource.manageUserListPosiitonPlaceholder</option>
            </select>
            <span class="text-danger" asp-validation-for="NewUser.PositionId"></span>
        </div>
    </div>
    <div class="m-portlet__foot m-portlet__foot--fit">
        <div class="m-form__actions pull-right">
            <button type="submit" class="btn btn-sp m-btn m-btn--icon">
                @sharedResource.manageUserListNewButton
            </button>
        </div>
    </div>
</form>
