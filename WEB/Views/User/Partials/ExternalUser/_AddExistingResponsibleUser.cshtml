@model Application.DTOs.AddResponsibleUserToStepDTO
@using Web.Helpers
@using Core.Constants

@inject Web.Helpers.HtmlHelper htmlHelper

@{
    Layout = null;
}


<form class="m-form m-form--fit m-form--label-align-right" id="add_responsible_user_to_step_existing">
    <div class="m-portlet__body">
        <input type="hidden" asp-for="Step" />
        <div class="form-group m-form__group">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
        <div class="form-group m-form__group ">
            <label asp-for="ExistingResponsibleUser.Id">
                User
            </label>
            <select asp-items="htmlHelper.GetUsersSelectListByPlan(Model.PlanId)" asp-for="ExistingResponsibleUser.Id" class="form-control m-select2" style="width:100%">
                <option value="">-- Specify --</option>
            </select>
            <span class="text-danger" asp-validation-for="ExistingResponsibleUser.Id"></span>
        </div>
    </div>
    <div class="m-portlet__foot m-portlet__foot--fit">
        <div class="m-form__actions pull-right">
            <button type="submit" class="btn btn-sp m-btn m-btn--icon">
                Add
            </button>
        </div>
    </div>
</form>