@model Application.DTOs.PlanStepDTO

<div class="form-group m-form__group m--margin-top-10 m--margin-bottom-10">
    <label>
        @sharedResource.worksheetStepInfoReceivedFrom
    </label>
    <div>
        <div class="m-list-badge m-list-badge--light-bg">
            <div class="m-list-badge__items">
                @foreach (var member in Model.SubmittedUsers)
                {
                    <span class="m-list-badge__item m-list-badge__item--default">
                        @member.FullName
                    </span>
                }
            </div>
        </div>
    </div>
</div>
<div class="form-group m-form__group">
    <label>
        @sharedResource.worksheetStepInfoAwaitingfFeedback
    </label>
    <div>
        <div class="m-list-badge m-list-badge--light-bg">
            <div class="m-list-badge__items">
                @foreach (var member in Model.NotSubmittedUsers)
                {
                    <span class="m-list-badge__item m-list-badge__item--default">
                        @member.FullName
                    </span>
                }
            </div>
        </div>
    </div>
</div>