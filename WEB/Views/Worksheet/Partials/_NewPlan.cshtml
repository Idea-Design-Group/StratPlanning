@model PlanDTO

@{
    Layout = null;
}
<form class="m-form m-form--fit m-form--label-align-right" id="add_plan_form">
    <div class="m-portlet__body">
        <div class="form-group m-form__group">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
        <div class="form-group m-form__group">
            <label asp-for="Name">
                Title
            </label>
            <input type="text" asp-for="Name" class="form-control m-input" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group m-form__group">
            <label asp-for="Description">
                Description
            </label>
            <textarea asp-for="Description" class="form-control m-input"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>
    <div class="m-portlet__foot m-portlet__foot--fit">
        <div class="m-form__actions pull-right">
            <button type="submit" class="btn btn-sp m-btn m-btn--icon">
                Add
            </button>
        </div>
    </div>
</form>
