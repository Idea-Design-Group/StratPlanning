                                    <div class="col-sm-12 ">
                                        <div class="m-list-badge m-list-badge--light-bg">
                                            <div class="m-list-badge__items">
                                                @if (answerGroup.DefinitiveAnswer?.SwotAnswer.Strengths != null)
                                                {
                                                    foreach (var strength in answerGroup.DefinitiveAnswer?.SwotAnswer.Strengths)
                                                    {
                                                        <span class="m-list-badge__item m-list-badge__item--warning">
                                                            @strength
                                                        </span>
                                                    }
                                                }
                                                @if (answerGroup.OtherAnswers != null)
                                                {
