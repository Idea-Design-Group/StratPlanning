@model Application.DTOs.PlanStepDTO

@{
    var blockIndex = (int)ViewData["BlockIndex"];
    var questionIndex = (int)ViewData["QuestionIndex"];

    var question = Model.StepBlocks[blockIndex].Questions[questionIndex];
}
<div class="form-group m-form__group">
    <div class="row">
        <div class="col-2 col-md-1">
            <div class="m-dropdown m-dropdown--up m-dropdown--inline m-dropdown--huge"
                 data-dropdown-toggle="click" data-dropdown-persistent="true">
                <a href="#"
                   class=" m-dropdown__toggle  combined_result dropdown-toggle">
                    <i class="fa fa-info"></i>
                </a>
                <div class="m-dropdown__wrapper">
                    <div class="m-dropdown__inner">
                        <div class="m-dropdown__body">
                            <div class="m-dropdown__content">
                                <div class="m-scrollable" data-scrollable="true"
                                     data-max-height="200">
                                    <div class="m-list-timeline">
                                        <div class="m-list-timeline__items">
                                            @foreach (var otherAnswer in question.OtherAnswers)
                                            {
                                                <div class="m-list-timeline__item">
                                                    <span class="m-list-timeline__badge"></span>
                                                    <span class="m-list-timeline__text">

                                                    </span>
                                                    <span class="m-list-timeline__text">
                                                        @otherAnswer.BooleanAnswer.Answer
                                                    </span>
                                                </div>
                                            }
                                            <div class="m-list-timeline__item">
                                                <span class="m-list-timeline__badge"></span>
                                                <span class="m-list-timeline__text">
                                                    <b>Definitive answer</b>
                                                </span>
                                                <span class="m-list-timeline__text">
                                                    @question.DefinitiveAnswer?.BooleanAnswer.Answer
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <span class="m-dropdown__arrow m-dropdown__arrow--left"></span>
                </div>
            </div>
        </div>
        <div class="col-7 col-md-9">
            @question.Title
            <br>
            <span class="text-danger" asp-validation-for="StepBlocks[blockIndex].Questions[questionIndex]"></span>
        </div>
        <div class="col-4 col-md-2 m-align--center">
            <span class="m-switch m-switch--icon">
                <label>
                    <input type="hidden" asp-for="StepBlocks[blockIndex].Questions[questionIndex].Id" />
                    <input asp-for="StepBlocks[blockIndex].Questions[questionIndex].Answer.BooleanAnswer.Answer" checked="@(Model.StepBlocks[blockIndex].Questions[questionIndex].Answer?.BooleanAnswer.Answer??false)" type="checkbox">
                    <span></span>
                </label>
            </span>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(question.Description))
    {
        <span class="m-form__help">
            @question.Description
        </span>
    }
</div>